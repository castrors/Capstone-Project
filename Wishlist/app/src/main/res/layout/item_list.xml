<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_marginBottom="@dimen/small_default_padding"
    android:layout_marginLeft="@dimen/small_default_padding"
    android:layout_marginRight="@dimen/small_default_padding"
    android:layout_marginTop="@dimen/small_default_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/iv_wish_photo"
        android:contentDescription="@string/content_description_wish_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scrim_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent_50"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wish_name"
            style="@style/titleItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_default_padding"
            android:paddingLeft="@dimen/large_default_padding"
            android:paddingRight="@dimen/large_default_padding"
            android:paddingTop="@dimen/large_default_padding"
            tools:text="Playstation 4" />

        <TextView
            android:id="@+id/tv_wish_due"
            style="@style/subtitleItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/large_default_padding"
            android:paddingLeft="@dimen/large_default_padding"
            android:paddingRight="@dimen/large_default_padding"
            tools:text="21/04/2017" />

    </LinearLayout>
</android.support.v7.widget.CardView>